#:kivy 1.9.1

<TictacScreenManager>
	SelectScreen:		
	GameBoard:
	
<SelectScreen>	
	name:'select_screen'
	size_of_font: 30
	ready2go: False
	game_size: 3
	
	BoxLayout:
		orientation:'vertical'

		BoxLayout:
			id: enter_size
			orientation: 'horizontal'
			size_hint:(1, 0.1)

			Label:
				text: "Enter game size:"
				font_size: root.size_of_font
				color: (0, 255, 1, 0.9)
				size_hint: (0.4, 1)
			TextInput:
				id: user_text_input
				hint_text: "(2 < N < 10)"
				on_text: root.sanitizeTextInput()
				font_size: root.size_of_font
				cursor_color: (255, 0, 0, 1)
				multiline: False
				size_hint: (0.2, 1)
			Widget:
				size_hint: (0.4, 1)

		BoxLayout:
			orientation: 'horizontal'
			size_hint: (1, 0.1)
			Label:
				text: "Player X"
				color: (0, 255, 1, 0.9)
				font_size: root.size_of_font*1.2
				size_hint: (0.4, 1)
			Label:
				size_hint: (0.2, 1)
			Label:
				text: "Player O"
				color: (0, 255, 1, 0.9)
				font_size: root.size_of_font*1.2
				size_hint: (0.4, 1)

		BoxLayout:
			id: list_vs_list
			size_hint: (1, 0.7)
			orientation:'horizontal'

			StrategyList:
				id:p1_choices
				size_hint: (0.4, 1)
			Label:
				text:"VS"
				font_size: root.size_of_font
				size_hint: (0.2, 1)
			StrategyList:
				id:p2_choices
				size_hint: (0.4, 1)

		GreenButton:
			id: start_butt
			text:"Start"
			font_size: root.size_of_font
			on_press: root.makeGameAndSwitch([p1_choices.strat_buttons, p2_choices.strat_buttons])
			# on_release: root.startGame()
			# background_color: (0, 255, 1, 0.9)
			size_hint:(1, 0.1)

<StrategyList>
	orientation:'vertical'
	
<ListButton>
	font_size:30
	
<BoardTile>
	font_size:9
	
<GreenButton>
	background_color: (0, 255, 1, 0.9)
	size_hint:(1, 0.4)